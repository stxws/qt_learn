{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "qt_launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/build/${fileBasenameNoExtension}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "为 gdb 启用整齐打印",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "qt_build_debug",
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}